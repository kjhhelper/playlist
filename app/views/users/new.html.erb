<h1>Register</h1>
<form action="/users" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  firstname <input type="text" name="user[f_name]" value=""><br>
  lastname <input type="text" name="user[l_name]" value=""><br>
  email<input type="text" name="user[email]" value=""><br>
  password<input type="text" name="user[password]" value=""><br>
  <input type="submit" name="name" value="submit">
</form>
<br>

<%if flash[:errors]%>
<%flash[:errors].each do |a|%>
<p><%=a%></p>
<% end %>
<% end %>

